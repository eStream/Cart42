@if (TempData.GetAlerts().Any())
{
    <script type="text/javascript">
        $(function() {
            @foreach (Alert alert in TempData.GetAlerts())
            {
                <text>
				window.alerts.showAlert({
					message: '@alert.Message.Replace("'", "\\'")',
					alertClass: '@alert.AlertClass'
				});
				</text>
            }
        });
    </script>
}